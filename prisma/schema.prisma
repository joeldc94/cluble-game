generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Clubs {
  id              Int            @id(map: "clubs_pkey") @default(autoincrement())
  name            String         @db.Char(32)
  fullName        String         @db.Char(64)
  city            String         @db.Char(32)
  state           String?        @db.Char(32)
  country         String         @db.Char(32)
  stadium         String         @db.Char(32)
  staduimFullName String         @db.Char(64)
  colors          String[]       @db.Char(32)
  foundationYear  Int
  mascot          String?        @db.Char(32)
  apiFootballId   Int?
  GamesHistory    GamesHistory[]
}

model GamesHistory {
  id        Int      @id(map: "gamesHistory_pkey") @default(autoincrement())
  gameId    String
  clubId    Int
  createdAt DateTime @default(now())
  Clubs     Clubs    @relation(fields: [clubId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_club")
}
